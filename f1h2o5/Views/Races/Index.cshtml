@model IEnumerable<f1h2o5.Models.Race>

@{
    ViewBag.Title ="The races...";
}

<h2>Here are the races...</h2>

@if (@User.IsInRole("Admin"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Location.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RaceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RaceYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Location.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RaceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RaceYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            <ul>
                <li> @Html.ActionLink("Details", "Details", new { id = item.RaceId })</li>
                @if (@User.IsInRole("Admin"))
                {
                    <li> @Html.ActionLink("Edit", "Edit", new { id = item.RaceId }) </li>
                    <li> @Html.ActionLink("Delete", "Delete", new { id = item.RaceId })</li>}
            </ul>
        </td>
    </tr>
}

</table>
